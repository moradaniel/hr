<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
       "-//Hibernate/Hibernate Mapping DTD//EN"
       "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.dpi.reparticion.ReparticionImpl"    table="REPARTICION">

    <id name="id" column="ID" type="long">
          <generator class="sequence">
				<param name="sequence">REPARTICION_SEQ</param>
          </generator>
        </id> 
        
    <property name="nombre" column="NOMBRE" type="string"/> 
    
    <!-- this association is bidirectional
    	centrosector side is marked as inverse="true" so the owner of the relation is Reparticion-->
    <set name="centroSectores" cascade="save-update" lazy="true" inverse="true">
		<key column="REPARTICIONID" foreign-key="fk_ReparticionCentroSector"/>
		<one-to-many class="org.dpi.centroSector.CentroSectorImpl"/>
	</set>

  </class>
</hibernate-mapping>