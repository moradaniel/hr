<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
	"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
	
<tiles-definitions>

	<definition name="hotels/main" extends="standardLayout" templateType="freemarker">
		<put-attribute name="body">
			<definition template="/WEB-INF/views/hotels/main.ftl" templateType="freemarker">
				<put-attribute name="search" value="/WEB-INF/views/hotels/search.ftl" />
				<put-attribute name="list" value="/WEB-INF/views/hotels/list.ftl" />
				<put-attribute name="detail" value="/WEB-INF/views/hotels/show.ftl" />
			</definition>
		</put-attribute>
	</definition>

	<definition name="hotels/list" extends="standardLayout" templateType="freemarker">
		<put-attribute name="body" value="/WEB-INF/views/hotels/list.ftl" />
	</definition>

	<definition name="hotels/show" extends="standardLayout" templateType="freemarker">
		<put-attribute name="body" value="/WEB-INF/views/hotels/show.ftl" />
	</definition>
	
	<definition name="hotels/edit" extends="standardLayout" templateType="freemarker">
		<put-attribute name="body" value="/WEB-INF/views/hotels/edit.ftl" />
	</definition>


</tiles-definitions>
